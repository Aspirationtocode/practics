$headerLabelColor = alpha(#A3CBC5, .55)
$headerLabelMinColor = darken(alpha(#A3CBC5, .9), 20%)
$headerActiveLabelColor = alpha(#A3CBC5, .85)

.header
	position relative
	background-size cover
	height 300px
	image-bg("bg-header.png")
	background-position center

	&-open-mobile-menu
		z-index 25
		position absolute
		top 10px
		left 10px
		size(36px)
		image-bg("icons/burger.svg")
		transition opacity .2s
		opacity .8
		display none

		@media screen and (max-width: 870px)
			display block

		&--close
			image-bg("icons/close.svg")

		&:hover
			opacity 1
			cursor pointer

	&-overlay
		z-index 15
		background-color hsla(0, 0%, 7%, .85)
		position absolute
		top 0
		left 0
		height 100%
		width 100%
		display none

		&--active
			display block

	&::after
		content ""
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background-color alpha(#000, .3)
		display none
		pointer-events none

	@media screen and (max-width: 870px)
		&::after
			display block

	&-circle
		position relative
		z-index 10
		size(240px)
		background-color alpha(#fff, .9)
		border-radius 50%
		position absolute
		left 50%
		transform translate(-50%, -50%)

		@media screen and (max-width: 780px)
			size(180px)

		&__logo-mirea
			image-bg("logo-mirea.png")
			size(100px)
			position absolute
			bottom 6px
			left 50%
			transform translate(-50%)

			@media screen and (max-width: 780px)
				size(80px)


	&-labels
		display -webkit-flex
		display -ms-flex
		display flex
		justify-content space-between
		padding 16px

		&__label
			color #fff
			transition all ease .3s
			background-color $headerLabelColor
			font-size 25px
			padding 18px 16px
			text-align center
			display -webkit-flex
			display -ms-flex
			display flex
			justify-content center
			align-items center
			min-width 360px
			border-radius 5px

			@media screen and (max-width: 1120px)
				padding 5px 8px
				font-size 16px
				min-width 208px
				border-radius 2px
				background-color $headerLabelMinColor

			@media screen and (max-width: 870px)
				display none

			&:hover
				cursor pointer
				background-color $headerActiveLabelColor
				color #fff
				transition all ease .3s

			&:active
				color #fff
				cursor pointer
				background-color $headerActiveLabelColor
				transition all ease .3s
